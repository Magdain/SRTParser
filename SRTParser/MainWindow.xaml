<Window x:Class="SRTParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" MinWidth="850" Width="850">
    <DataGrid x:Name="subtitleList" CanUserResizeColumns="False" CanUserReorderColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Start" Binding="{Binding Path=Start}" Width="1*"/>
            <DataGridTextColumn Header="End" Binding="{Binding Path=End}" Width="1*"/>
            <DataGridTextColumn Header="Content" Binding="{Binding Path=Content}"/>
            
            <DataGridTextColumn Header="Size" Binding="{Binding Path=Size}"/>
            <DataGridTextColumn Header="Duration" Binding="{Binding Path=Duration}" Width="1*"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
